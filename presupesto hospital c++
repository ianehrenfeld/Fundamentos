#include "stdafx.h"
#include <iostream>
#include "conio.h"
using namespace std;


void main ()
{
    float m,t,p,g,c,d, e;
    t=0.30;
    p=0.30;
    g=0.40;
    cout <<"ingrese su presupuestro del hospital " << endl;
    cin >> m;
    if (m>1,000,000) {
        c=m*(t-0.05);
        d=m*(p-0.05);
        e=m*(g-0.05);
    }
    else {
        c=m*t;
        d=m*p;
        e=m*g;
    }
    cout<< "su presupuesto de traumatologia es:" << endl;
    cout << c << endl;
    cout<< "su presupuesto de pediatria es:" << endl;
    cout << d << endl;
    cout<< "su presupuesto de ginecologia es:" << endl;
    cout << e << endl;
    getch();
    

}
